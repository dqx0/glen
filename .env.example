# Glen ID - Environment Variables Example
# Copy this file to .env and update with your actual values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=glen_dev
DB_PASSWORD=glen_dev_pass
DB_NAME=glen_dev

# Service Ports
USER_SERVICE_PORT=8082
AUTH_SERVICE_PORT=8081
SOCIAL_SERVICE_PORT=8083
API_GATEWAY_PORT=8080

# Service URLs
USER_SERVICE_URL=http://localhost:8082
AUTH_SERVICE_URL=http://localhost:8081
SOCIAL_SERVICE_URL=http://localhost:8083

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_min_32_chars
JWT_EXPIRES_IN=3600

# Google OAuth2 Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URL=http://localhost:3000/auth/callback

# GitHub OAuth2 Configuration
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URL=http://localhost:3000/auth/callback

# Discord OAuth2 Configuration
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_REDIRECT_URL=http://localhost:3000/auth/callback

# Frontend Configuration
REACT_APP_API_BASE_URL=http://localhost:8080

# WebAuthn Configuration
WEBAUTHN_DISPLAY_NAME=Glen ID
WEBAUTHN_ID=localhost
WEBAUTHN_ORIGIN=http://localhost:3000

# Session Configuration
SESSION_SECRET=your_session_secret_key_here_min_32_chars
SESSION_MAX_AGE=86400

# Development Mode
NODE_ENV=development
GO_ENV=development