# Glen ID - Default Environment Variables
# Copy this file to .env and update with your actual values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=glen_dev
DB_PASSWORD=glen_dev_pass
DB_NAME=glen_dev

# Alternative: Use DATABASE_URL instead of individual DB settings
# DATABASE_URL=postgres://glen_dev:glen_dev_pass@localhost:5432/glen_dev?sslmode=disable

# Service Ports
USER_SERVICE_PORT=8082
AUTH_SERVICE_PORT=8081
SOCIAL_SERVICE_PORT=8083
API_GATEWAY_PORT=8080

# Service URLs
USER_SERVICE_URL=http://localhost:8082
AUTH_SERVICE_URL=http://localhost:8081
SOCIAL_SERVICE_URL=http://localhost:8083

# API Gateway URL (for internal service communication)
API_GATEWAY_URL=http://localhost:8080

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_min_32_chars
JWT_EXPIRES_IN=3600

# Google OAuth2 Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URL=http://localhost:3000/auth/callback

# GitHub OAuth2 Configuration
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URL=http://localhost:3000/auth/callback

# Discord OAuth2 Configuration
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_REDIRECT_URL=http://localhost:3000/auth/callback

# Frontend Configuration
REACT_APP_API_BASE_URL=http://localhost:8080

# Production URLs (for deployment)
# GOOGLE_REDIRECT_URL=https://glen.dqx0.com/auth/callback
# GITHUB_REDIRECT_URL=https://glen.dqx0.com/auth/callback
# DISCORD_REDIRECT_URL=https://glen.dqx0.com/auth/callback
# REACT_APP_API_BASE_URL=https://api.glen.dqx0.com

# Environment setting (development/production)
ENVIRONMENT=development

# Redis Configuration (if using Redis for sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:3001,https://glen.dqx0.com
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With,Accept,Origin,X-CSRF-Token,Access-Control-Request-Method,Access-Control-Request-Headers,X-User-ID
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=86400
CORS_ALLOW_ANY_LOCALHOST=true

# Logging
LOG_LEVEL=info

# WebAuthn Configuration
WEBAUTHN_DISPLAY_NAME=Glen ID
WEBAUTHN_ID=localhost
WEBAUTHN_ORIGIN=http://localhost:3000
# For production:
# WEBAUTHN_ID=glen.dqx0.com
# WEBAUTHN_ORIGIN=https://glen.dqx0.com

# OAuth2 Sample App Configuration
OAUTH2_SAMPLE_APP_BASE_URL=http://localhost:3000
# For production:
# OAUTH2_SAMPLE_APP_BASE_URL=https://glen.dqx0.com

# Session Configuration
SESSION_SECRET=your_session_secret_key_here_min_32_chars
SESSION_MAX_AGE=86400

# Development/Production Mode
NODE_ENV=development
GO_ENV=development
ENVIRONMENT=development